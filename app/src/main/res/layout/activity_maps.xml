<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <!--#region Alien -->

    <TextView
        android:id="@+id/textViewSet"
        android:layout_width="190dp"
        android:layout_height="105dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Поскакали!!!"
        android:inputType="text"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toStartOf="@+id/aliensTextView"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/aliensSpinner"
        map:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/alienButton"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_marginBottom="170dp"
        android:text="New Alien !"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/aliensSpinner"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_marginBottom="130dp"
        android:dropDownWidth="wrap_content"
        android:spinnerMode="dropdown"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintStart_toStartOf="parent" />
    <!--#endregion -->

    <!--#region My -->
    <Button
        android:id="@+id/myButton"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_marginBottom="170dp"
        android:text="Вокруг меня"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_marginBottom="130dp"
        android:text="Следить"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent" />
    <!--#endregion-->

    <TextView
        android:id="@+id/aliensTextView"
        android:layout_width="190dp"
        android:layout_height="105dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"
        android:scrollbars="vertical"
        android:text=""
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.959"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/aliensSpinner"
        map:layout_constraintVertical_bias="1.0" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="210dp"
        tools:context=".MapsActivity" />




</androidx.constraintlayout.widget.ConstraintLayout>
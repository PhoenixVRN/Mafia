<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iconpers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <!--#region My -->


    <!--#endregion-->

    <!--#region Aliens -->

    <!--#endregion -->

    <com.fenix.app.service.entity.ProgressTextView
        android:id="@+id/progressAlienHP"
        android:layout_width="170dp"
        android:layout_height="15dp"
        android:layout_margin="5dp"
        android:textColor="#de6868"
        android:gravity="center"
        android:textStyle="bold"


        android:layout_marginTop="4dp"
        android:background="@drawable/background_bar_hp"


        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="1.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/aliensSpinner" />

    <com.fenix.app.service.entity.ProgressTextView
        android:id="@+id/progressMyHP"
        android:layout_width="170dp"
        android:layout_height="15dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textStyle="bold"

        android:layout_marginTop="8dp"
        android:background="@drawable/background_bar_hp"

        map:layout_constraintEnd_toStartOf="@+id/progressAlienHP"
        map:layout_constraintHorizontal_bias="0.066"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/aliensSpinner" />

    <Spinner
        android:id="@+id/aliensSpinner"
        android:layout_width="170dp"
        android:layout_height="33dp"
        android:layout_marginBottom="250dp"
        android:dropDownWidth="wrap_content"
        android:spinnerMode="dropdown"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.983"
        map:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/myNameTextView"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="284dp"
        android:background="@android:drawable/editbox_background"
        android:focusableInTouchMode="true"
        android:hint="Мое имя"
        android:inputType="none"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toStartOf="@+id/myAreaButton"/>

    <Button
        android:id="@+id/myAreaButton"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="284dp"
        android:text="Вокруг меня"
        android:textSize="8sp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="410dp"
        android:layout_height="413dp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity" />

    <ImageButton
        android:id="@+id/iconPersBatton"
        android:layout_width="27dp"
        android:layout_height="56dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:srcCompat="@drawable/iconpers" />

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/progressAlienHP">

        <com.fenix.app.service.entity.ProgressTextView
            android:id="@+id/progressIconAction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"

            android:layout_marginTop="4dp"
            android:background="@drawable/background_icon_action"

            android:rotation="-90"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="1.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/aliensSpinner" />

        <ImageButton
            android:id="@+id/hitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            map:srcCompat="@drawable/impact" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
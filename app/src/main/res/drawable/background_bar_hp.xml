<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@+id/bar_background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="#3d3a3a"
                android:centerY="0.75"
                android:endColor="#615d5d"
                android:startColor="#948e8e" />
        </shape>
    </item>
    <item android:id="@+id/bar_value">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#781e1e"
                    android:centerY="0.75"
                    android:endColor="#a12727"
                    android:startColor="#d43333" />
            </shape>
        </clip>
    </item>

</layer-list>
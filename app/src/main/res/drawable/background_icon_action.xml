<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@+id/bar_background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="#a39191"
                android:centerY="0.75"
                android:endColor="#d1b8b8"
                android:startColor="#edd3d3" />
        </shape>
    </item>
    <item android:id="@+id/bar_value">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#b06363"
                    android:centerY="0.75"
                    android:endColor="#d17777"
                    android:startColor="#de6868" />
            </shape>
        </clip>
    </item>

</layer-list>